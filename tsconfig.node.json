{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2020",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist/backend",
    "rootDir": "./backend"
  },
  "include": [
    "backend/**/*.ts",
    "types/**/*.ts",
    "backend/config/config.json"
  ]
}
